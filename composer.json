{
    "name": "vipinmittal/drupal-upgrader",
    "description": "Automated Drupal upgrade plugin for Composer",
    "type": "composer-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "composer-plugin-api": "^2.0",
        "php": ">=7.4",
        "symfony/process": "^5.4",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\UpgradeAutomation\\": "src/"
        }
    },
    "extra": {
        "class": "Drupal\\UpgradeAutomation\\Plugin"
    }
} 